{
    "name": "milkdown",
    "version": "0.0.0",
    "private": true,
    "engines": {
        "node": ">=12",
        "pnpm": ">=7"
    },
    "scripts": {
        "postinstall": "husky install",
        "test": "pnpm test:doc && pnpm test:lint && pnpm test:tsc:cache && pnpm test:unit",
        "test:unit": "vitest",
        "test:tsc": "pnpm --filter=@milkdown/* run tsc",
        "test:tsc:cache": "nx run-many --target=tsc --all --parallel",
        "test:lint": "eslint \"**/{src,gh-pages,examples}/**/*.{js,ts,tsx}\"",
        "test:doc": "prettier --check \"**/*.md\"",
        "test:e2e": "pnpm --filter=@milkdown/e2e run start:test",
        "format": "lint-staged",
        "watch": "pnpm --filter=./packages --parallel run start",
        "doc": "pnpm --filter=@milkdown/gh-pages run start",
        "doc:preview": "pnpm --filter=@milkdown/gh-pages run preview",
        "start": "concurrently -n watch,doc \"pnpm watch\" \"pnpm doc\"",
        "build:packs": "pnpm --filter=@milkdown/* run build",
        "build:doc": "pnpm --filter=@milkdown/gh-pages run build",
        "build:cache": "nx run-many --target=build --all --parallel",
        "build:affected": "nx affected --target=build",
        "graph": "nx dep-graph",
        "clear": "rimraf 'packages/*/{lib,tsconfig.tsbuildinfo,node_modules,.rollup.cache}' && rimraf node_modules",
        "changeset": "changeset",
        "release": "changeset publish",
        "commit": "git-cz"
    },
    "devDependencies": {
        "@changesets/cli": "^2.22.0",
        "@commitlint/cli": "^17.0.0",
        "@commitlint/config-conventional": "^17.0.0",
        "@nrwl/cli": "latest",
        "@nrwl/nx-cloud": "latest",
        "@nrwl/tao": "latest",
        "@nrwl/workspace": "latest",
        "@rollup/plugin-commonjs": "^22.0.0",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^13.3.0",
        "@rollup/plugin-typescript": "^8.3.0",
        "@types/node": "^17.0.5",
        "@types/rollup-plugin-auto-external": "^2.0.2",
        "@typescript-eslint/eslint-plugin": "^5.14.0",
        "@typescript-eslint/parser": "^5.14.0",
        "@vitejs/plugin-react-refresh": "^1.3.3",
        "@vitejs/plugin-vue": "^2.3.3",
        "@vitejs/plugin-vue-jsx": "^1.1.5",
        "@vitest/ui": "^0.18.0",
        "concurrently": "^7.0.0",
        "cross-env": "^7.0.3",
        "esbuild": "^0.14.38",
        "eslint": "^8.0.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-header": "^3.1.1",
        "eslint-plugin-import": "^2.24.2",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-promise": "^6.0.0",
        "eslint-plugin-react-hooks": "^4.3.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "eslint-plugin-tsdoc": "^0.2.14",
        "git-cz": "^4.7.6",
        "husky": "^8.0.0",
        "jsdom": "^20.0.0",
        "lint-staged": "^13.0.0",
        "nx": "latest",
        "prettier": "^2.6.2",
        "rimraf": "^3.0.2",
        "rollup": "^2.72.0",
        "rollup-plugin-auto-external": "^2.0.0",
        "rollup-plugin-copy": "^3.4.0",
        "rollup-plugin-dts": "^4.2.1",
        "rollup-plugin-esbuild": "^4.9.1",
        "tslib": "^2.3.1",
        "typescript": "^4.6.2",
        "vite": "^2.7.13",
        "vitest": "^0.18.0"
    },
    "pnpm": {
        "peerDependencyRules": {
            "ignoreMissing": [
                "prosemirror-model",
                "prosemirror-state",
                "prosemirror-view",
                "@babel/core",
                "babel-runtime",
                "cypress",
                "jest",
                "vue"
            ],
            "allowedVersions": {
                "react": "18",
                "react-dom": "18"
            }
        }
    }
}
